#include <Stepper.h>

const int stepsPerRevolution = 800; 


#define echoPin1 23
#define trigPin1 22
#define echoPin2 31
#define trigPin2 30


Stepper myStepper(stepsPerRevolution, motorPin1, motorPin2, motorPin3, motorPin4);

void setup() {

  myStepper.setSpeed(60); 
}

void loop() {

  myStepper.step(stepsPerRevolution); 
  delay(2000); 
  
  
  myStepper.step(-stepsPerRevolution); 
  delay(2000); 
}
